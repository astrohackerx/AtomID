{
  "name": "atomid-sdk",
  "version": "2.0.0",
  "description": "Solana AtomID SDK - Verify proof-of-sacrifice ranks and gate access in your dApp",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.mjs",
      "require": "./dist/react.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/react.tsx --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts src/react.tsx --format cjs,esm --dts --watch",
    "test": "node test-sdk.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "solana",
    "atomid",
    "identity",
    "proof-of-sacrifice",
    "reputation",
    "soulbound",
    "blockchain",
    "web3"
  ],
  "author": "Lost Bitcoin Layer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/astrohackerx/AtomID"
  },
  "homepage": "https://lostatom.org",
  "bugs": {
    "url": "https://github.com/astrohackerx/AtomID/issues"
  },
  "peerDependencies": {
    "@solana/web3.js": "^1.87.0",
    "react": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "sas-lib": "^1.0.9"
  }
}
